{% extends 'admin_base.html.twig' %}


{% block title %}Oyunlar{% endblock %}
{% block content %}
<!-- MAIN -->
<div class="main">
	<!-- MAIN CONTENT -->
	<div class="main-content">
		<div class="container-fluid">
			<h3 class="page-title">Slider</h3>
			<a href="{{ path('add-slider') }}" class="btn btn-success mb-10" style="margin-bottom:20px"><i class="fa fa-plus"
				 style="margin-right:10px"></i>Ekle</a>

			<!-- BASIC TABLE -->
			<div class="panel">

				<div class="panel-body">
					<table class="table">
						<thead>
							<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Price</th>
								<th>Status</th>
								<th>Edit</th>
								<th>Delete</th>
							</tr>
						</thead>
						<tbody>


							{% for slide in sliders %}
							<tr>
								<td>{{slide.id}}</td>
								<td>{{slide.name}}</td>
								<td>{{slide.price}}</td>
								{% if slide.status == "aktif" %}
									<td>
										<a class="aktif" href="#"></a>
									</td>
								{% elseif slide.status == "pasif" %}
									<td>
										<a class="pasif" href="#"></a>
									</td>
								{% else %}
									<td>Null</td>
								{% endif %}
								<td><a href="{{ path("update-slider", {'id': slide.id} ) }}"> <i class="btn btn-primary fa fa-edit"></i></a></td>
								<td><i class="btn btn-danger fa fa-trash"></i> </td>
							</tr>

							{% endfor %}



						</tbody>
					</table>
				</div>
			</div>
			<!-- END BASIC TABLE -->

		</div>
	</div>
</div>
<!-- END MAIN -->
{% endblock %}