{% extends 'admin_base.html.twig' %}


{% block title %}Sliders{% endblock %}
{% block content %}
<!-- MAIN -->
<div class="main">
  <!-- MAIN CONTENT -->
  <div class="main-content">
    <div class="container-fluid">
      <h3 class="page-title">Slider Ekle</h3>

      <div class="panel col-md-6">
        <div class="panel-body">
          <form method="post" enctype="multipart/form-data">
            <input type="text" name="sliders[name]" class="form-control" placeholder="Oyun Adı">
            <br>
            <input type="number" name="sliders[price]" class="form-control" placeholder="Oyun Fiyatı">
            <input type="hidden" name="sliders[status]"  value="true">
            <br>
            <input type="text" name="sliders[url]" class="form-control" placeholder="Slider Url">
            <br>
            <input type="file" name="imagename" class="form-control">
            
            <button type="submit" class="btn btn-info" style="margin-top: 20px">Kaydet</button>
          </form>
        </div>

      </div>
      <!-- END BASIC TABLE -->

    </div>
  </div>
</div>
<!-- END MAIN -->
{% endblock %}